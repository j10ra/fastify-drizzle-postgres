{
  "name": "fastify-api",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "index.js",
  "scripts": {
    "start": "node build/index.js | pino-pretty --colorize",
    "build": "ts-node ./scripts/build.ts",
    "dev": "npm run schema:generate && nodemon --exec ts-node --files -r tsconfig-paths/register ./src/index.ts | pino-pretty --colorize",
    "drizzle:generate": "npx drizzle-kit generate:pg",
    "drizzle:migrate": "ts-node ./scripts/migrate.ts",
    "drizzle:studio": "npx drizzle-kit studio",
    "lint": "npx eslint --fix ./scripts/**/* ./src/**/*",
    "prettier": "npx prettier --write ./scripts/**/* ./src/**/*",
    "lint:prettier": "npm run lint && npm run prettier",
    "schema:build": "ts-node ./scripts/schema.ts",
    "schema:format": "eslint --fix ./src/db/schema/index.ts",
    "schema:generate": "npm run schema:build && npm run schema:format",
    "test": "jest --coverage --verbose"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.2",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "env-schema": "^5.2.1",
    "fastify": "^4.24.3",
    "fastify-zod": "^1.4.0",
    "http-status": "^1.7.3",
    "module-alias": "^2.2.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "postgres": "^3.4.3",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.55.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "sequelize-cli": "^6.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  }
}
