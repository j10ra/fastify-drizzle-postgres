{
  "name": "fastify-api",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node build/index.js | pino-pretty --colorize",
    "dev": "nodemon --exec ts-node --files -r tsconfig-paths/register ./src/index.ts | pino-pretty --colorize",
    "drizzle:generate": "npx drizzle-kit generate:pg",
    "drizzle:migrate": "ts-node ./scripts/migrate.ts",
    "lint": "eslint --fix 'scripts/**/*' 'src/**/*'",
    "prettier": "npx prettier --write 'scripts/**/*' 'src/**/*'",
    "lint:prettier": "npm run lint && npm run prettier"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.2",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "env-schema": "^5.2.1",
    "eslint-config-airbnb": "^19.0.4",
    "fastify": "^4.24.3",
    "fastify-zod": "^1.4.0",
    "http-status": "^1.7.3",
    "module-alias": "^2.2.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "postgres": "^3.4.3",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.1"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.js": "prettier --write"
  }
}
